<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="WindowStyle">
        <Setter Property="Control.Background" Value="Black"/>
    </Style>

    <Style x:Key="DockStyle">
        <Setter Property="Panel.Background" Value="Black"/>
    </Style>

    <Style x:Key="DockText">
        <Setter Property="TextBlock.Foreground" Value="White"/>
    </Style>

    <Style x:Key="TextBox">
        <Setter Property="TextBox.Foreground" Value="White"/>
        <Setter Property="TextBox.Background" Value="Black"/>
    </Style>

    <Style x:Key="TextBlockStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="TextBlock.Foreground" Value="Black"/>
        <Setter Property="TextBlock.Padding" Value="Black"/>
    </Style>

    <Style x:Key="TextBlockCenterStyle" BasedOn="{StaticResource TextBlockStyle}">
        <Setter Property="TextBlock.TextAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>